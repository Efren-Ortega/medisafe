<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medico.AlergiasPaciente">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/txt_title"
                    android:text="Alergias"
                    ></TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bg_input_2"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/iconPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/baseline_alternate_email_24" />

                    <EditText
                        android:id="@+id/et_alergia"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:hint="Alergia"
                        android:inputType="text"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_add"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:padding="10dp"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_baseline_add_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alergias_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/btn_icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/baseline_navigate_before_24" />

</FrameLayout>