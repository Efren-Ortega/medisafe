<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:fillViewport="true"
    tools:context=".Login"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/medisafe_dark" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="99969-healthcare-loader.json" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingTop="0dp"
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="Iniciar Sesión"
                android:textColor="@color/txt_title"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:background="@drawable/input_bg"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iconemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_alternate_email_24" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="Correo Electronico"
                    android:text="user@example.com"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_primary"
                    android:background="@android:color/transparent"
                    android:textSize="18dp" />





            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_bg"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iconLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_lock_24" />

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:layout_marginLeft="10dp"
                    android:hint="Contraseña"
                    android:textStyle="bold"
                    android:text="1234"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:textColor="@color/txt_primary"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/showPasswordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_show_password" />


            </LinearLayout>

            <TextView
                android:id="@+id/txtRecuperarContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:gravity="right"
                android:text="Recuperar Contraseña"
                android:textColor="@color/txt_second" />

            <Button
                android:id="@+id/btn_Ingresar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Ingresar"
                android:backgroundTint="@color/btn_primary"
                android:background="@drawable/bg_input_primary"
                />

            <ImageButton
                android:id="@+id/btn_huella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_fingerprint"
                app:srcCompat="@drawable/fingerprint" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/txt_second"
                android:text="Registrarte como" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="0.5dp"
                    android:gravity="center"
                    android:background="@color/bg_input_color"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtRegDerechoHabiente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:clickable="true"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/txt_second"
                        android:text="Derechohabiente"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/bg_input_color"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtRegMedico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="Médico"
                        android:textStyle="bold"
                        android:textColor="@color/txt_second" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>